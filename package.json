{
  "name": "graphql-relay-mutation",
  "version": "0.1.0-alpha.1",
  "main": "lib/index.js",
  "module": "es/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/4Catalyzer/graphql-relay-mutation.git"
  },
  "author": "4Catalyzer",
  "license": "MIT",
  "scripts": {
    "babel": "babel src --ignore **/__tests__ --delete-dir-on-start -x .js,.ts,.tsx",
    "build": "yarn babel -d lib && yarn babel -d es --env-name esm && yarn build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir lib && tsc --outDir es",
    "eslint": "eslint . --ext .js,.ts,.tsx",
    "format": "yarn eslint && yarn import-sort --write && yarn prettier --write",
    "import-sort": "import-sort '**/src/**/*.{js,ts,tsx}' '!**/__generated__/*' '!**/*.d.ts'",
    "lint": "tsc --noEmit && yarn eslint && yarn import-sort --list-different && yarn prettier --list-different",
    "prepublishOnly": "yarn run build",
    "prettier": "prettier --ignore-path .eslintignore '**/*.{json,css,md}'",
    "release": "rollout",
    "tdd": "jest --watch",
    "test": "yarn lint && jest",
    "testonly": "jest"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "importSort": {
    ".js, .ts, .tsx": {
      "parser": "@4c/import-sort/parser-ts",
      "style": "@4c/import-sort/style"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "import-sort --write",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write --ignore-path .eslintignore",
      "git add"
    ]
  },
  "jest": {
    "preset": "@4c/jest-preset",
    "testEnvironment": "jsdom"
  },
  "release": {
    "publishDir": "lib"
  },
  "devDependencies": {
    "@4c/babel-preset-4catalyzer": "^4.1.1",
    "@4c/import-sort": "^4.3.0",
    "@4c/jest-preset": "^1.3.0",
    "@4c/rollout": "^1.2.0",
    "@4c/tsconfig": "^0.1.1",
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-typescript": "^7.1.0",
    "@typescript-eslint/eslint-plugin": "^1.1.1",
    "babel-core": "^7.0.0-bridge.0",
    "eslint": "^5.12.0",
    "eslint-config-4catalyzer-jest": "^1.1.0",
    "eslint-config-4catalyzer-react": "^0.7.0",
    "eslint-config-4catalyzer-typescript": "^0.10.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.3",
    "husky": "^1.1.2",
    "import-sort-cli": "^5.2.0",
    "jest": "^24.0.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "typescript": "^3.2.2"
  }
}
